# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

#
# Home page
#
GET    /                  controllers.Application.index()

#
# User
#
POST /user/               controllers.User.addPerson()
GET  /user/persons        controllers.User.getPersons
GET  /user/users          controllers.User.getUsers
GET  /user/json           controllers.User.getJson()

#
# Login
#
GET    /signin            controllers.Login.signin()
GET    /signup            controllers.Login.signup()

# Map static resources from the /public folder to the /assets URL path
GET    /assets/*file   controllers.Assets.at(path="/public", file)
